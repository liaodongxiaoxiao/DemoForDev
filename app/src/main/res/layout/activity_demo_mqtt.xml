<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".demo.MQTTDemoActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MQTT Host"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_host"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新连接MQTT" />

    <EditText
        android:id="@+id/et_publish_topic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入要发送给的主题"
        android:maxLength="100" />

    <EditText
        android:id="@+id/et_publish_msg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入要发送的内容"
        android:maxLength="100" />

    <Button
        android:id="@+id/btn_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送" />

    <EditText
        android:id="@+id/et_topic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入要订阅的主题"
        android:maxLength="100" />

    <Button
        android:id="@+id/btn_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订阅" />

    <TextView
        android:id="@+id/tv_rev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10" />
</LinearLayout>