<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="#FFFFFF" />
        </Constraint>
        <Constraint
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_search">
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="#FFFFFF" />
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="#00FFFFFF" />
        </Constraint>

        <Constraint
            android:id="@+id/ifv_search_bg"
            app:layout_constraintBottom_toBottomOf="@+id/tv_search"
            app:layout_constraintEnd_toEndOf="@+id/tv_search"
            app:layout_constraintStart_toStartOf="@+id/tv_search"
            app:layout_constraintTop_toTopOf="@+id/tv_search">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="0" />
        </Constraint>

        <Constraint
            android:id="@+id/v_head_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title">
            <PropertySet android:alpha="0" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/middle">
        <Constraint
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="#000000" />
            <PropertySet
                android:visibility="visible"
                app:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@+id/ifv_search_bg"
            app:layout_constraintBottom_toBottomOf="@+id/tv_search"
            app:layout_constraintEnd_toEndOf="@+id/tv_search"
            app:layout_constraintStart_toStartOf="@+id/tv_search"
            app:layout_constraintTop_toTopOf="@+id/tv_search">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1" />
        </Constraint>

        <Constraint
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_search">
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="#000000" />
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="#FFFFFF" />
        </Constraint>

        <Constraint
            android:id="@+id/v_head_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title">
            <PropertySet android:alpha="1" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Constraint
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <PropertySet
                android:visibility="gone"
                app:visibilityMode="normal" />
        </Constraint>

        <Constraint
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="#000000" />
        </Constraint>

        <Constraint
            android:id="@+id/ifv_search_bg"
            app:layout_constraintBottom_toBottomOf="@+id/tv_search"
            app:layout_constraintEnd_toEndOf="@+id/tv_search"
            app:layout_constraintStart_toStartOf="@+id/tv_search"
            app:layout_constraintTop_toTopOf="@+id/tv_search">
            <CustomAttribute
                app:attributeName="crossfade"
                app:customFloatValue="1" />
            <PropertySet
                android:visibility="gone"
                app:visibilityMode="ignore" />
        </Constraint>

        <Constraint
            android:id="@+id/v_head_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title">
            <PropertySet android:alpha="0" />
        </Constraint>

    </ConstraintSet>


    <Transition
        app:constraintSetEnd="@+id/middle"
        app:constraintSetStart="@+id/start">
        <!--<KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/tv_title"
                app:framePosition="79"
                android:scaleX="1.2" />
            <KeyAttribute
                app:motionTarget="@+id/tv_title"
                app:framePosition="79"
                android:scaleY="1.2" />
        </KeyFrameSet>-->
    </Transition>


</MotionScene>
